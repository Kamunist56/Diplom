unit fPac;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, System.Actions, Vcl.ActnList,
  Vcl.ToolWin, Vcl.ActnMan, Vcl.ActnCtrls, Vcl.PlatformDefaultStyleActnCtrls,
   Vcl.StdCtrls;

type
  TPac = class(TForm)
    ActionManager1: TActionManager;
    ActionToolBar1: TActionToolBar;
    Action1: TAction;
    Memo1: TMemo;
    procedure Action1Execute(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Pac: TPac;

implementation

{$R *.dfm}

uses cPac;
var
  Pacient:TPacient;

procedure TPac.Action1Execute(Sender: TObject);
begin
//  Pacient:=TPacient.create(1);
  with Memo1.Lines do
  begin
    Clear;
    Add('Имя: ' + Pacient.name);
    Add('Фамилия: ' + Pacient.surname);
    Add('Отчество: ' + Pacient.patronymic);
    Add('Пол: ' + Pacient.pol);
    Add('Дата рождения: ' + DateToStr(Pacient.date_birth));
    Add('Социальный статус: ' + Pacient.soc.name);
    Add('Полис: ' + Pacient.polis.name);
    Add('Адрес: ' + Pacient.adress.GetFullAdress);
    Add('Место работы: ' + Pacient.work.name);
    Add('Участок: ' + Pacient.sector.name);
    Add('Поликлиника: ' + Pacient.polikl.name);
  end;
end;

end.
